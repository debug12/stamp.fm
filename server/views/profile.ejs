<!-- Modal Window(s) -->

<div id="info" class="modalDialog">
  <div>
    <a href="#close" title="Close" class="close" id="closeButton" style="color:#FFFFFF">X</a>
    <center>
    <h5 style="color:white">Fill in your Song Information</h5>
    <div>
      <form id = "db-upload" method = "POST" action = "/db-upload">
        <input type="text" class="songName" placeholder="Song Name" name = "songName" id = "songName"><br><br>
      </form>
       <p style="color:#FFFFFF">Choose the Genre that best fits your song</p>
