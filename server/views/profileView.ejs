<% layout('layout') -%>
<% script('/scripts/main.js') -%>
<% script('profileEdit.js') -%>
<% script('users.js') -%>
<% stylesheet('video-js.css') -%>
<% script('video.js') -%>
<% script('view.js') -%>
<% script('profile.js') -%>
<!DOCTYPE html>
<html>
  <head>
    <title>stamp.fm</title>
    <link rel="icon" type="image/png" href="/img_samp.fm_logo copy.jpg"/>
    <link rel="stylesheet" type="text/css" href="/gridiculous.css">
    <link rel="stylesheet" type="text/css" href="/profileView.css">
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro' rel='stylesheet' type='text/css'>
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>

  <script>
  $(function() {
    $( "#tabs" ).tabs();
  });
  </script>
  </head>
  
  <body>
    <div id="wrapper">


<div data-tag="<%=id%>" id="profileContent" class="grid wfull">

  <div class="row">
      <div class="c2" id="tabs">

        <ul id="listName">
          <li id="favButton" class="highlightTab"><a href="#playlistContent" id="playlistLabel">Favorites</a></li>
          <li id="songButton"><a href="#songContent" id="songListLabel">Songs</a></li>

          <script>
          $("document").ready(function(){
          $("li#songButton").click(function() {
            $('li#favButton').removeClass("highlightTab");
          $('li#favButton').click(function(){
            $('li#favButton').addClass("highlightTab");
          })
            });
          });          
          </script>
          <script>
          $("document").ready(function(){
          $("li#songButton").click(function() {
            $('li#songButton').addClass("highlightTab");
          $('li#favButton').click(function(){
            $('li#songButton').removeClass("highlightTab");
          })
            });
          });          
          </script>          
        </ul>
  


  <div id="playlistContent">
    <div id="song" style=" overflow:auto;">
      <table cellspacing="0" cellpadding="0" >
        <table cellspacing="0" cellpadding="1" style="color:#000" id = "playlistTable">
          <% playlist.forEach(function(play){ %>
          <tr id="playlist_name" class = "p<%=play._id%>">
            <td><div style="width:100px;" data-tag ="<%=play._id%>" class = "vidPlay"><%= play.name %></div></td>
            <td><img data-name = "<%=song.name%>" data-tag ="<%=song._id%>" class = "addPlay" src="favoriteIcon.png" style="height:15px;width:15px;float:right;-moz-border-radius:10px;border-radius: 10px;-webkit-border-radius: 10px;"></td>
          </tr>
          <% }); %>
        </table> 
      </table>
    </div> 
  </div>    


  <div id="songContent">
      <div id="song">
             <div style=" overflow:auto;">
               <table cellspacing="0" cellpadding="1" cellpadding class = "songnames" id = "songTable">
      <% songs.forEach(function(song){ %>
        <tr id="song_name" style="color:#000;" class = "<%=song._id%>">
          <td><div data-tag ="<%=song._id%>" class = "vidPlay" style="width:100px;"><%= song.name %></div></td>
          <td><img data-name = "<%=song.name%>" data-tag ="<%=song._id%>" class = "addPlay" src="favoriteIcon.png" style="height:15px;width:15px;float:right;-moz-border-radius:10px;border-radius: 10px;-webkit-border-radius: 10px;"></td>
          <td><input data-genre = "<%=song.genre%>" data-name = "<%=song.name%>" data-tag ="<%=song._id%>" type="button" value="<%=song.inTourney%>" class="addTourney"></td>
        </tr>
      <% }); %>
          </table>  
        </div>
            </div> 
          </div>
        </div>


<div id = "users"></div>
        <div id="name" class="c5" style="margin:auto;">

        <spanName id="displayName" style="color:black"><%=name%></spanName>
        <div id="location">
        <spanLocation id="spanLocation">
        <span id="displayLocation"><%=location%></span>
        </spanLocation>
        </div>
      <div id="profilePicture">
        <a href="#bigPic"><img id="preview" src="<%=profID%>" data-tag="<%=id%>"></a>
        <ul class="interaction" id="followInfo">
        <a href="#followingList" id="followingLink"><li><div id="following" style="font-size:12px"><strong>Following</strong><br></div></li></a>
        <li><input type="button" value="follow" id="stampFollow" onclick="buttonChange();"></li><br>
        <a href="#followersList" id="followersLink"><li><div id="followers" style="font-size:12px"><strong>Followers</strong><br></div></li></a>
        </ul>
        <ul class="interaction" id="social" >
        <li><div class="fb-like" id="fbIcon" data-href="<%=facebook%>" data-send="false" data-layout="button_count" data-width="450" data-show-faces="true" data-font="arial"></div></li><br>
        <li><a href="<%=twitter%>" id="twitIcon" class="twitter-follow-button" data-show-screen-name="false"></a><script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script></li>
        </ul>
      </div>
<br>
    <div id="bio" >
    <spanBio id="displayBio"><%=bio%></spanBio>
      </div>

        <div id="video">
          <div class="c12 end" id="videoPlayer" style="border:none">
           <video height="300px" width="80%" id="vidYo" class="video-js vjs-default-skin" controls autoplay="true" data-setup='{"techOrder": "html5", "flash"]}'>
                <source src="" type="video/mp4" id = "source">
            </video>
          </div>   

         </div> 
</div>
   <div class="c2" id="feed" style="float:right"></div>
</div>
</div>
</div> 

</div>

<!-- Modal Window(s) -->

<div id="bigPic" class="modalDialog">
  <div>
    <a href="#close" title="Close" class="close" style="color:#FFFFFF">X</a>
    <img src="<%=profID%>" id="bigPicture" style="height: 500px; width: 500px;">  
  </div>
</div>

<!-- End Modal Window(s) -->

<!-- Modal Window(s) -->

<div id="followingList" class="modalDialog_follow">
  <div>
    <a href="#close" title="Close" class="close" style="color:#FFFFFF">X</a>
    <center>
    <h3 style="color:white">Who <%=name%> is Following</h3>    
    <div id="to"></div>   
    </center>
  </div>
</div>

<!-- End Modal Window(s) -->

<!-- Modal Window(s) -->

<div id="followersList" class="modalDialog_follow">
  <div>
    <a href="#close" title="Close" class="close" style="color:#FFFFFF">X</a>
    <center>
    <h3 style="color:white">Who's Following <%=name%></h3>    
    <div id="from"></div>   
    </center>
  </div>
</div>

<!-- End Modal Window(s) -->

<!-- FB Like Script-->
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<!-- End FB Like Script -->
</body>
