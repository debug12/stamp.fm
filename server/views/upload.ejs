<% layout('layout') -%>
<!DOCTYPE html>
<html>
  <head>
    <title>stamp.fm</title>
    <link rel="icon" type="image/png" href="/img_samp.fm_logo copy.jpg"/>
    <link rel="stylesheet" type="text/css" href="/upload.css">
    <link rel="stylesheet" type="text/css" href="/dropzone.css">
    <link href='http://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  
  <body>
    <div id="wrapper">
      <header id="header">
      <a href="http://www.stamp.fm"><img src="/headerStamp.png"></a>
      <ul style="float:right">
      <li>
      <a href="/upload" style="text-decoration:none" class="nav">UPLOAD</a>
 	  </li>
 	  <li>
      <a href="/audition" style="text-decoration:none" class="nav">AUDITION</a>
  	  </li>
  	  <li>
      <a href="/bracket" style="text-decoration:none" class="nav">BRACKET</a>
  	  </li>
   	  </ul>  
    </header>

      <div id="upload_block">
        <script src="/dropzone.js"></script>
        <form method = "POST" action="/file-upload" class="dropzone" enctype = "multipart/form-data">
        	<center><p id="uploadText" style="color:#FFFFFF">Drag and Drop to Upload a Song to the Tournament</p></center>
	  <div class="fallback">
	    <input id="uploaded" name="file" type="file" multiple success="onComplete(file)"/>
      	  </div>
        </form>
      </div>

  </div>


  <!-- Modal Window(s) -->

<div id="info" class="modalDialog">
  <div>
    <a href="#close" title="Close" class="close" id="close">X</a>

    <center>
    <h5 style="color:white">Fill in your Song Information</h5>
    <div>
      <form method = "post">
        <input type="text" class="songName" placeholder="Song Name" name = "songName"><br><br>
        <p style="color:#FFFFFF">Choose the Genre that best fits your song</p>
        <form action="">
        	<center>
        	<select name="genre">
        	<option class="genreChoice" id="country">Country</option>
			<option class="genreChoice" id="pop">Soft, Adult Rock, Pop</option>
			<option class="genreChoice" id="alternative">Alternative, Modern, Classic Rock</option>
			<option class="genreChoice" id="rap">Rap and Hip-Hop</option>
			<option class="genreChoice" id="rnb">R&B</option>
			<option class="genreChoice" id="instrumental">Instrumental and Classical</option>
			<option class="genreChoice" id="hardrock">Hard Rock and Metal</option>
			<option class="genreChoice" id="EDM">EDM and DJ</option>
			<option class="genreChoice" id="international">International</option>
			<option class="genreChoice" id="folk">Folk, Jazz, Reggae, Blues</option>
			</select>
			</center>
		</form><br>
        <input type="submit" value="Enter">
      </form>
    </div>
</center>
  </div>
</div>

<!-- End Modal Window(s) -->

  </body>
</html>