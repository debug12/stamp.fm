}

#bottomhalf:hover{
    background-color: rgba(180,7,6,1);
}

.dropdownWrapper:after{
    content: "";
    width: 0;
    height: 0;
    position: absolute;
    right: 3.9%;
    top: 50%;
    margin-top: 20px;
    border-width: 6px 0 6px 6px;
    border-style: solid;
    border-color: transparent #000; 
    -webkit-transform: rotate(-90deg); 
    -moz-transform: rotate(-90deg);   
}

#logOut{
    text-decoration: none;
    color: #FFFFFF;
}

#account{
    text-decoration: none;
    color: #FFFFFF;
}
